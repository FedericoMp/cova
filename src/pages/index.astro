---
import Layout from '../layouts/Layout.astro';
import Goals from '../components/Goals.astro';
import Presentation from '../components/Presentation.astro';
import Hero from '../components/global/Hero.astro';
---

<Layout title="CoVacations">
	<Hero fullHeight={true} hasSlider={true} hasModal={true} hasCaption={true} hasScroller={true}>
		<h1 class="hero-title display-4">
			Vive y emprende <br /><span class="font-poppins-bold"
				>experiencias únicas</span>
		</h1>
		<p class="hero-text w50 mt-3 fs-5">
			Descubre destinos inolvidables o únete como propietario a
			nuestro marketplace de administración hotelera.
		</p>
	</Hero>
	<Presentation/>
	<Goals/>
</Layout>
