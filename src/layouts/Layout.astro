---
interface Props {
	title: string;
}

const { title } = Astro.props;

// Supports weights 100-900
import '@fontsource-variable/inter';
// Regular + font-weight: 300;
import '@fontsource/poppins/300.css';
// Medium + font-weight: 400;
import '@fontsource/poppins/400.css';
// Bold + font-weight: 600;
import '@fontsource/poppins/600.css';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	</head>
	<body>
		<slot />
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	</body>
</html>
<style is:global>
	:root {
		--white: rgb(255, 255, 255);
		--lt-grey: rgb(251, 251, 251);
		--black: rgb(19, 21, 26);
		--st-green: rgb(0, 235, 164);
		--green: rgb(0, 200, 139);
		--lt-green: rgb(204, 251, 237);
		--st-orange: rgb(255, 107, 0);
		--orange: rgb(255, 146, 67);
		--lt-orange: rgb(251, 224, 204);

		--ff-systemui: system-ui, sans-serif;
		--ff-inter: 'Inter Variable', sans-serif;
		--ff-poppins: 'Poppins', sans-serif;

		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: var(--ff-systemui);
		font-family: var(--ff-inter);
		background: var(--black);
	}
	body {
		background: transparent;
	}
</style>
