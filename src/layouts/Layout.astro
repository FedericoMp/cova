---
interface Props {
	title: string;
	headerBlackBg?: boolean;
}

const { title } = Astro.props;
import { ViewTransitions } from 'astro:transitions';

// Supports weights 100-900
import '@fontsource-variable/inter';
// Regular + font-weight: 400;
import '@fontsource/poppins/400.css';
// Medium + font-weight: 500;
import '@fontsource/poppins/500.css';
// Bold + font-weight: 600;
import '@fontsource/poppins/600.css';

import Header from '../components/global/Header.astro';
import Footer from '../components/global/Footer.astro';

const { headerBlackBg } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/cova/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<ViewTransitions />
	</head>
	<body>
		<Header blackBg={headerBlackBg}/>
			<slot />
		<Footer/>
		<script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	</body>
</html>
<style is:global>
	/* Global styles */
	:root {
		--white: rgb(255, 255, 255);
		--lt-grey: rgb(251, 251, 251);
		--black: rgb(19, 21, 26);
		--st-green: rgb(0, 235, 164);
		--green: rgb(0, 200, 139);
		--lt-green: rgb(204, 251, 237);
		--dk-green: rgb(0 149 104);
		--st-orange: rgb(255, 107, 0);
		--orange: rgb(255, 146, 67);
		--lt-orange: rgb(251, 224, 204);
		--dk-orange: rgb(219 94 3);
		--st-gold: rgb(247 193 29 / 98%);
		--gold: rgb(255, 232, 163);

		--ff-systemui: system-ui, sans-serif;
		--ff-inter: 'Inter Variable', sans-serif;
		--ff-poppins: 'Poppins', sans-serif;
	}
	html, body {
		font-weight: 400;
		font-family: var(--ff-systemui)!important;
		font-family: var(--ff-inter)!important;
	}
	body {
		position: relative;
	}
	button:focus, input:focus, textarea:focus {
        box-shadow: none!important;
    }

	/* Font styles */
	.font-inter {
		font-weight: 400;
		font-family: var(--ff-inter)!important;
	}
	.font-inter-bold {
		font-weight: 700;
		font-family: var(--ff-inter)!important;
	}
	.font-poppins {
		font-weight: 400;
		font-family: var(--ff-poppins)!important;
	}
	.font-poppins-med {
		font-weight: 500;
		font-family: var(--ff-poppins)!important;
	}
	.font-poppins-bold {
		font-weight: 600;
		font-family: var(--ff-poppins)!important;
	}

	/* Widths styles */
	.w75,
	.w50 {
		width: 100%;
	}
	@media screen and (min-width: 992px) {
		.w75 {
			width: 75%;
		}
		.w50 {
			width: 50%;
		}
	}
	.container-960 {
		margin: 0 auto;
		max-width: 960px;
	}

	/* Text shadow */
	.text-shadow-1 {
		text-shadow: 0 .125rem .25rem rgba(0, 0, 0, .25);
	}
	.text-shadow-2 {
		text-shadow: 0 .25rem .5rem rgba(0, 0, 0, .25);
	}
	.text-shadow-3 {
		text-shadow: 0 .5rem 1.5rem rgba(0, 0, 0, .25);
	}
	.color-green {
		color: var(--green)!important;
	}
</style>
