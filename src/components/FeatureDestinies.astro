---
import FeatureDestinyCard from "./FeatureDestinyCard.astro";
import { getCollection } from "astro:content"
const destinos = await getCollection('destinos');
---

<section class="feature-destinies position-relative">
	<div class="container destinies-content px-4 py-5">
		<div class="row mb-5">
			<div class="col-12 col-md-6">
				<h2 class="title">
					Experiencias <br /><span class="font-inter-bold"
						>destacadas</span>
				</h2>
			</div>
			<div class="col-12 col-md-6">
				<p class="text ms-auto">
					Encontrá el <span class="font-inter-bold">balance</span> que
					buscás en <i>nuestras experiencias</i>.
				</p>
			</div>
		</div>
		<div class="row mt-3 mb-5">
			<div class="col-12 col-md-6 mb-3 mb-md-0">
                <FeatureDestinyCard 
                    title={destinos[0].data.region} 
                    link={`/cova/destino/${destinos[0].data.slug}`} 
                    bgImg={destinos[0].data.images[0]}
                />
			</div>
			<div class="col-6 col-md-3">
                <FeatureDestinyCard 
                    title={destinos[1].data.region} 
                    link={`/cova/destino/${destinos[1].data.slug}`} 
                    bgImg={destinos[1].data.images[0]}
                />
            </div>
			<div class="col-6 col-md-3">
                <FeatureDestinyCard 
                    title={destinos[2].data.region} 
                    link={`/cova/destino/${destinos[2].data.slug}`} 
                    bgImg={destinos[2].data.images[0]}
                />
            </div>
		</div>
	</div>
</section>

<style>
	.feature-destinies::before {
		bottom: 0;
		content: "";
		width: 100%;
		height: 18vh;
		position: absolute;
		background-color: var(--st-orange);
        border-bottom-right-radius: var(--bs-border-radius) !important;
        border-bottom-left-radius: var(--bs-border-radius) !important;
        /* background: linear-gradient(0deg, rgb(255 146 67) 0%, rgba(255, 255, 255, 1) 100%); */
	}
	.feature-destinies .destinies-content .title {
		font-size: xx-large;
	}
	.feature-destinies .destinies-content .title span {
		color: var(--st-orange);
	}
	.feature-destinies .destinies-content .text {
		font-size: x-large;
	}
</style>
