---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/global/Hero.astro';
import MainInfo from '../components/MainInfo.astro';
import Passport from '../components/Passport.astro';
import Presentation from '../components/Presentation.astro';
import HalfWidthImg from '../components/HalfWidthImg.astro';
import Goals from '../components/Goals.astro';
import FloatBtnContact from '../components/FloatBtnContact.astro';
---

<BaseLayout title="CoVacations - Multidestino y administración hotelera" headerFixedTop={true}>
	<Hero fullHeight={true} hasModal={true} hasCaption={true} hasScroller={true} bgImg={"https://raw.githubusercontent.com/FedericoMp/cova/refs/heads/main/public/images/hero/hero-home-2.webp"} hasBgGradient={true}>
		<h1 class="hero-title display-4 text-shadow-3">
			Vive y emprende <br /><span class="font-poppins-bold"
				>experiencias únicas</span>
		</h1>
		<p class="hero-text w50 mt-3 fs-5 text-shadow-3">
			Descubre destinos inolvidables o únete como propietario a nuestro marketplace de alojamientos.
		</p>
	</Hero>
	<MainInfo/>
	<Passport/>
	<Presentation/>
	<Goals/>
	<HalfWidthImg/>
	<FloatBtnContact msg="Quisiera consultar sobre..."/>
</BaseLayout>
