---
import BarcodeImg from "../../public/images/barcode.svg";
---
<section class="promos">
    <div class="container-960 px-4 py-5">
        <div class="row g-4">
            <div class="col-12 col-md-6">
                <div class="card card-promo pt-3 px-4 pb-4 rounded-3 position-relative overflow-hidden">
                    <img
						src={BarcodeImg.src}
						alt="Promo CoVacation"
						class="img-fluid h-100 opacity-50 position-absolute top-0 end-0 barcode-img"
					/>
                    <div class="d-inline-flex align-items-center justify-content-center mb-3 card-icon rounded-3 z-1">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 6v.75m0 3v.75m0 3v.75m0 3V18m-9-5.25h5.25M7.5 15h3M3.375 5.25c-.621 0-1.125.504-1.125 1.125v3.026a2.999 2.999 0 0 1 0 5.198v3.026c0 .621.504 1.125 1.125 1.125h17.25c.621 0 1.125-.504 1.125-1.125v-3.026a2.999 2.999 0 0 1 0-5.198V6.375c0-.621-.504-1.125-1.125-1.125H3.375Z" />
                          </svg>
                    </div>
                    <h4 class="title mt-4 mb-2">Promo Noviembre</h4>
                    <p  class="text">Promo Noviembre LUN a JUE reservando directo con el hotel.</p>
                    <a href="http://" target="_blank" rel="noopener noreferrer" class="link">Consultar 
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="chevron">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                          </svg>
                    </a>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="card card-promo pt-3 px-4 pb-4 rounded-3 position-relative overflow-hidden">
                    <img
						src={BarcodeImg.src}
						alt="Promo CoVacation"
						class="img-fluid h-100 opacity-50 position-absolute top-0 end-0 barcode-img"
					/>
                    <div class="d-inline-flex align-items-center justify-content-center mb-3 card-icon rounded-3 z-1">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 6v.75m0 3v.75m0 3v.75m0 3V18m-9-5.25h5.25M7.5 15h3M3.375 5.25c-.621 0-1.125.504-1.125 1.125v3.026a2.999 2.999 0 0 1 0 5.198v3.026c0 .621.504 1.125 1.125 1.125h17.25c.621 0 1.125-.504 1.125-1.125v-3.026a2.999 2.999 0 0 1 0-5.198V6.375c0-.621-.504-1.125-1.125-1.125H3.375Z" />
                          </svg>
                    </div>
                    <h4 class="title mt-4 mb-2">Promo Diciembre</h4>
                    <p  class="text">Promo Noviembre LUN a JUE reservando directo con el hotel.</p>
                    <a href="http://" target="_blank" rel="noopener noreferrer" class="link">Consultar 
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="chevron">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                          </svg>
                    </a>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center align-items-center w-100 mt-4 mb-2 pt-3">
            <button class="btn text-white">Cargar m√°s promos +</button>
        </div>
    </div>
</section>

<style>
    .promos .card-promo {
        border-color: var(--lt-orange);
    }
    .promos .card-promo::before {
        top: 0;
        left: 0;
        content: '';
        z-index: 0;
        opacity: .5;
        width: 100%;
        height: 40%;
        position: absolute;
        background-color: var(--lt-grey);
    }
    .promos .card-promo .card-icon {
        width: 3rem;
		height: auto;
        padding: .3rem;
		color: var(--white);
        border: 1px solid;
        border-color: var(--st-orange);
    }
    .promos .card-promo .card-icon svg {
        fill: var(--st-orange);

    }
    .promos .card-promo .text {
        font-size: small;
    }
    .promos .card-promo a.link {
        opacity: 0.8;
        width: fit-content;
        text-decoration: none;
        color: var(--st-orange);
    }
    .promos .card-promo a.link:hover,
    .promos .card-promo a.link:hover .chevron {
        opacity: 1;
    }
    .promos .card-promo a.link .chevron {
        width: 1rem;
        opacity: .8;
        stroke: var(--st-orange);
    }
    .promos button.btn {
		filter: brightness(0.95);
		background-color: var(--orange);
	}
	.promos button.btn:hover {
		background-color: var(--st-orange);
	}
</style>