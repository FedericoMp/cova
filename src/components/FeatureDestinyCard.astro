---
interface Props {
	title: string;
    link: string;
    bgImg: string;
}

const { title, link, bgImg } = Astro.props;
---

<a href={link} class="text-decoration-none card-link">
    <div class="border-0 overflow-hidden position-relative card p-3 feature-dest-card feature-bg-1 d-flex flex-column justify-content-end" style={`background-image: url(${bgImg});`}>
        <button class="btn rounded-pill z-1 link text-white d-flex justify-content-center align-items-center">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="map-svg me-1"
            >
                <path
                    fill-rule="evenodd"
                    d="m11.54 22.351.07.04.028.016a.76.76 0 0 0 .723 0l.028-.015.071-.041a16.975 16.975 0 0 0 1.144-.742 19.58 19.58 0 0 0 2.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 0 0-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 0 0 2.682 2.282 16.975 16.975 0 0 0 1.145.742ZM12 13.5a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"
                    clip-rule="evenodd"></path>
            </svg>
            {title}
        </button>
    </div>
</a>

<style>
    .card-link .card.feature-dest-card.feature-bg-1,
    .card-link .card.feature-dest-card.feature-bg-2,
    .card-link .card.feature-dest-card.feature-bg-3 {
        min-height: 18rem;
        background-size: cover;
		background-repeat: no-repeat;
		background-position: center center;
    }
    .card-link .card.feature-dest-card.feature-bg-1::before,
    .card-link .card.feature-dest-card.feature-bg-2::before,
    .card-link .card.feature-dest-card.feature-bg-3::before {
        top: 0;
        right: 0;
        z-index: 0;
        content: '';
        width: 100%;
        height: 100%;
        position: absolute;
        background-color: #00000045;
    }
    .card-link .card.feature-dest-card button.link {
        font-size: small;
		width: fit-content;
		background-color: var(--st-orange);
	}
	.card.feature-dest-card button.link svg.map-svg {
		width: 1rem;
		height: 1rem;
	}
    @media screen and (max-width: 992px) {
        .card-link .card.feature-dest-card.feature-bg-1,
        .card-link .card.feature-dest-card.feature-bg-2,
        .card-link .card.feature-dest-card.feature-bg-3 {
            min-height: 13rem;
        }
        .card-link .card.feature-dest-card button.link {
            font-size: x-small;
        }
    }
</style>